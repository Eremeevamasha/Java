<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background_white">

    <TextView
        android:id="@+id/tvMatchingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сопоставьте слова"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_green_dark"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Нажмите английское слово, затем нажмите соответствующий перевод"
        android:textSize="16sp"
        android:textColor="@color/text_gray"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/card_green_background"
        android:padding="16dp">

        <!-- Левый столбец — английские слова -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="8dp">

            <!-- Убрана надпись "Английские слова" -->

            <Button
                android:id="@+id/eng1"
                style="@style/ThemeButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="cat"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_green_background" />

            <Button
                android:id="@+id/eng2"
                style="@style/ThemeButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="dog"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_green_background" />

            <Button
                android:id="@+id/eng3"
                style="@style/ThemeButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="rabbit"
                android:background="@drawable/button_green_background" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/primary_green_light"
            android:layout_marginHorizontal="8dp" />

        <!-- Правый столбец — русские слова -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <!-- Убрана надпись "Русские слова" -->

            <Button
                android:id="@+id/rus1"
                style="@style/ThemeButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="кот"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_green_background" />

            <Button
                android:id="@+id/rus2"
                style="@style/ThemeButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="собака"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_green_background" />

            <Button
                android:id="@+id/rus3"
                style="@style/ThemeButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="кролик"
                android:background="@drawable/button_green_background" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сопоставлено: 0 из 3"
        android:textSize="16sp"
        android:textColor="@color/primary_green"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnCheckMatching"
        style="@style/ThemeButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Проверить результат"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_green_background" />

    <Button
        android:id="@+id/btnBackMatching"
        style="@style/SecondaryButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Назад"
        android:layout_marginTop="12dp" />

</LinearLayout>